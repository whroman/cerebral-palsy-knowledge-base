{
  "name": "cerebral-palsy-knowledge-base",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "generate:references": "node scripts/generate-references.js",
    "start": "npm run generate:references && docusaurus start",
    "build": "npm run generate:references && docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "check:frontmatter": "remark 'research/!(CLAUDE).md' --frail",
    "check:links": "markdown-link-check docs/**/*.md research/*.md",
    "check:abbreviations": "! grep -r --include='*.md' -n '\\bCP\\b' docs/ research/ | grep -v '^[^:]*:[^:]*:.*>.*CP' || echo 'No invalid CP abbreviations found'",
    "check:citations": "node scripts/check-citations.js",
    "check:orphans": "node scripts/check-orphans.js",
    "check:source-types": "node scripts/check-source-types.js",
    "check:features": "node scripts/check-features.js",
    "check:all": "npm run check:frontmatter && npm run check:abbreviations && npm run check:source-types && npm run check:citations && npm run check:orphans && npm run check:features && npm run check:links"
  },
  "dependencies": {
    "@docusaurus/core": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@mdx-js/react": "^3.0.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "clsx": "^2.0.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/types": "3.9.2",
    "glob": "^13.0.0",
    "gray-matter": "^4.0.3",
    "markdown-link-check": "^3.14.2",
    "remark-cli": "^12.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-lint-frontmatter-schema": "^3.15.4"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=20.0"
  }
}
